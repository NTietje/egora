<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EgoraAppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/customToolbar</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/smallTextSize</item>
    </style>

    <style name="EgoraEditText">
        <item name="android:background">@drawable/textedit_egora_default</item>
        <item name="android:textColor">@color/darkTextColor</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:radius">10dp</item>
        <item name="android:layout_width">@dimen/rectangleDefaultWidth</item>
        <item name="android:layout_height">@dimen/rectangleDefaultHeight</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_marginTop">@dimen/marginEditText</item>
    </style>

    <style name="EgoraButton">
        <item name="android:background">@drawable/button_egora_default</item>
        <item name="android:textColor">@color/lightTextColor</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:radius">10dp</item>
        <item name="android:layout_width">@dimen/rectangleDefaultWidth</item>
        <item name="android:layout_height">@dimen/rectangleDefaultHeight</item>
    </style>

    <style name="EgoraEditField">
        <item name="android:background">@drawable/textfield_egora_default</item>
        <item name="android:textColor">@color/darkTextColor</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:layout_width">@dimen/rectangleDefaultWidth</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>


    <style name="customToolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="toolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/titleTextSize</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
