<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="1dp"
    android:padding = "10dp">


    <ImageView

        android:id="@+id/item_listView_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="1dp"
        android:contentDescription="Bild des Items" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_listView_name"
        android:layout_marginStart="110dp"
        android:layout_alignStart="@id/item_listView_imageView"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_listView_description"
        android:layout_below="@+id/item_listView_name"
        android:layout_marginTop="5dp"
        android:layout_marginStart="110dp"
        android:layout_alignStart="@id/item_listView_imageView"

        />

</RelativeLayout>
