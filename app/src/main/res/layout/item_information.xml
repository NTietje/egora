<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:layout_margin="1dp"
    android:padding="10dp"
    android:id="@+id/item_information_layout">


    <ImageView
        android:id="@+id/item_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="1dp"
        android:contentDescription="Bild des Items" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_textView_name"
        android:layout_marginStart="110dp"
        android:textSize="@dimen/smallTextSize"
        android:layout_toEndOf="@+id/my_item_imageView"
        android:minLines="1"
        android:maxLines="2"
        android:textColor="@color/darkTextColor"
        android:layout_alignStart="@id/item_imageView"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_textView_description"
        android:layout_below="@+id/item_textView_name"
        android:textSize="@dimen/xsmallTextSize"
        android:textColor="@color/midGrey"
        android:maxLines="3"
        android:layout_marginTop="5dp"
        android:layout_marginStart="110dp"
        android:layout_alignStart="@id/item_imageView"
        />

</RelativeLayout>
