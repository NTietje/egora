<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.CreateAccountActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center" >

        <TextView
            android:id="@+id/titleRegisterView"
            android:layout_width="206dp"
            android:layout_height="126dp"
            android:layout_marginTop="28dp"
            android:fontFamily="sans-serif-thin"
            android:text="@string/app_name"
            android:textColor="@color/colorPrimary"
            android:typeface="normal"
            app:autoSizeTextType="uniform" />

        <EditText
            android:id="@+id/regEmail"
            style="@style/EgoraEditText"
            android:layout_marginTop="24dp"
            android:hint="@string/email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/regPassword"
            style="@style/EgoraEditText"
            android:hint="@string/password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/regPasswordRepeat"
            style="@style/EgoraEditText"
            android:hint="@string/passwordRep"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/regFirstName"
            style="@style/EgoraEditText"
            android:hint="@string/firstname"
            android:inputType="text" />

        <EditText
            android:id="@+id/regLastName"
            style="@style/EgoraEditText"
            android:hint="@string/lastname"
            android:inputType="text" />

        <EditText
            android:id="@+id/regStreetName"
            style="@style/EgoraEditText"
            android:hint="@string/street"
            android:inputType="text" />

        <EditText
            android:id="@+id/regHouseNumber"
            style="@style/EgoraEditText"
            android:hint="@string/housenumber"
            android:inputType="text" />

        <EditText
            android:id="@+id/regCityName"
            style="@style/EgoraEditText"
            android:hint="@string/city" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            >

            <CheckBox
                android:id="@+id/privacy_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="25dp"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/privacy_checkbox">

                <TextView
                    android:id="@+id/privacy_first_words"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ich aktzeptiere hiermit die "
                    android:textSize="18dp"
                    />

                <TextView
                    android:id="@+id/privacy_statement_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Datenschutzhinweise"
                    android:textSize="18dp"
                    android:layout_below="@id/privacy_first_words"
                    android:textColor="@color/colorPrimary"
                    />


            </RelativeLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/buttonRegister"
            style="@style/EgoraButton"
            android:layout_marginTop="@dimen/marginButtonToEditText"
            android:text="@string/register"
            android:layout_marginBottom="@dimen/marginToBottom" />

    </LinearLayout>

</ScrollView>
