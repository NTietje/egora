<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccountActivity">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="75dp">

            <TextView
                android:id="@+id/titleRegisterView"
                android:layout_width="206dp"
                android:layout_height="126dp"
                android:layout_marginTop="56dp"
                android:fontFamily="sans-serif-thin"
                android:text="@string/app_name"
                android:textColor="@color/colorPrimary"
                android:typeface="normal"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/regEmail"
                android:layout_width="320dp"
                android:layout_height="72dp"
                android:layout_marginTop="40dp"
                android:background="#D8D8D8"
                android:hint="E-Mail"
                android:paddingLeft="20dp"
                android:textColor="@color/darkTextColor"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleRegisterView"
                android:inputType="text"
                android:maxLines="1"
                android:lines="1"
                android:scrollHorizontally="true"
                android:ellipsize="end"/>

            <EditText
                android:id="@+id/regPassword"
                android:layout_width="320dp"
                android:layout_height="72dp"
                android:layout_marginTop="@dimen/marginEditText"
                android:background="#D8D8D8"
                android:hint="Password"
                android:paddingLeft="20dp"
                android:textColor="@color/darkTextColor"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.505"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/regEmail" />

            <EditText
                android:id="@+id/regPasswordRepeat"
                android:layout_width="320dp"
                android:layout_height="72dp"
                android:layout_marginTop="@dimen/marginEditText"
                android:background="#D8D8D8"
                android:hint="Repeat Password"
                android:paddingLeft="20dp"
                android:textColor="@color/darkTextColor"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/regPassword" />

            <EditText
                android:id="@+id/regFirstName"
                android:layout_width="320dp"
                android:layout_height="72dp"
                android:layout_marginTop="@dimen/marginEditText"
                android:background="#D8D8D8"
                android:hint="First Name"
                android:paddingLeft="20dp"
                android:textColor="@color/darkTextColor"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/regPasswordRepeat" />

            <EditText
                android:id="@+id/regLastName"
                android:layout_width="320dp"
                android:layout_height="72dp"
                android:layout_marginTop="@dimen/marginEditText"
                android:background="#D8D8D8"
                android:hint="Last Name"
                android:paddingLeft="20dp"
                android:textColor="@color/darkTextColor"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.472"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/regFirstName" />

            <Button
                android:id="@+id/buttonRegister"
                style="@android:style/Widget.Material.Light.Button.Borderless"
                android:layout_width="322dp"
                android:layout_height="72dp"
                android:layout_marginTop="@dimen/marginButtonToEditText"
                android:background="@color/colorPrimary"
                android:fontFamily="sans-serif"
                android:text="Register"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.483"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/regLastName" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</LinearLayout>