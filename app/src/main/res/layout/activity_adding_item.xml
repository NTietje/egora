<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/item_Constraint_Layout">

                <ImageView
                    android:id="@+id/item_imageView"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="350dp"
                    android:layout_height="267dp"

                    android:src="@drawable/ic_photo_camera_gray_24dp"
                    tools:srcCompat="@tools:sample/avatars"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.472"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <EditText
                    android:id="@+id/item_name"
                    android:layout_width="320dp"
                    android:layout_height="72dp"
                    android:layout_marginTop="@dimen/marginEditText"
                    android:background="#D8D8D8"
                    android:hint="Name of the item"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="@color/darkTextColor"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.472"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/item_imageView" />

                <EditText
                    android:id="@+id/item_description"
                    android:layout_width="320dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="@dimen/marginEditText"
                    android:background="#D8D8D8"
                    android:hint="Description"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="@color/darkTextColor"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.472"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/item_name" />

                <Button
                    android:id="@+id/button_reset_item"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Reset"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginRight="150dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.472"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/item_description"
                    />

                <Button
                    android:id="@+id/button_insert_item"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Insert Item"
                    android:layout_marginLeft="150dp"
                    app:layout_constraintLeft_toLeftOf="@+id/button_reset_item"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.472"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/item_description"/>


            </androidx.constraintlayout.widget.ConstraintLayout>



        </ScrollView>

</LinearLayout>