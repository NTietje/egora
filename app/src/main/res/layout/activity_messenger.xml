<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>


    <android.support.design.widget.TabLayout
        android:id="@+id/main_messenger_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <android.support.design.widget.TabItem
            android:id="@+id/messenger_tabs_chats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chats" />

        <android.support.design.widget.TabItem
            android:id="@+id/messenger_tabs_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacs" />

    </android.support.design.widget.TabLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:layout_below="@id/main_messenger_tabs">

        <android.support.v4.view.ViewPager
            android:id="@+id/main_messenger_viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v4.view.ViewPager>

    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/button_navigation_main"
        android:background="@color/white"
        />




</RelativeLayout>